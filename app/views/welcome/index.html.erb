<table class="ranking">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Address
      </th>
      <th>
		Available
      </th>
      <th>
		HTML Valid
      </th>
    </tr>
  </thead>
  <tbody>
    <% @sites.each do |site| %>
    <tr>
      <td>
        <%= link_to site.name, site%>
      </td>
      <td>
       <a href="<%= site.url %>"><%= site.url %></a>
      </td>
      <td class="availability">
        <%= validation_image @sites_checks[site]['availability'].result %>
      </td>
      <td class="validation">
		<%= validation_image @sites_checks[site]['htmlValidity'].result %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
